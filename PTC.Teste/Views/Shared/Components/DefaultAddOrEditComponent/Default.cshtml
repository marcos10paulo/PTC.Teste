@model PTC.Teste.Models.DefaultAddOrEditViewModel


@if (ViewBag.Error != null || TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert" style="text-align:center">
        @if (ViewBag.Error != null)
        {
            <strong>@ViewBag.Error</strong>
        }
        else if (TempData["Error"] != null)
        {
            <strong>@TempData["Error"]</strong>
        }
    </div>
}
else if (ViewBag.Success != null || TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert" style="text-align:center">
        @if (ViewBag.Success != null)
        {
            <strong>@ViewBag.Success</strong>
        }
        else if (TempData["Success"] != null)
        {
            <strong>@TempData["Success"]</strong>
        }
    </div>
}
<!-- /.card-body -->
<div class="card-footer">
    <button type="submit" class="btn btn-app bg-success">
        <i class="fas fa-save"></i> Gravar
    </button>
    <a type="button" class="btn btn-app bg-warning" asp-controller="@Model.Controller" asp-action="Index">
        <i class="fas fa-undo-alt"></i>Voltar
    </a>
    @if (Model.Id > 0)
    {
        <button type="button" class="btn btn-app bg-danger" data-toggle="modal" data-target="#modal-delete">
            <i class="fas fa-trash"></i>Excluir
        </button>
    }
    else
    {
        <button type="button" class="btn btn-app bg-danger" disabled>
            <i class="fas fa-trash"></i>Excluir
        </button>
    }
</div>

<div class="modal fade" id="modal-delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmação</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Deseja realmente excluir o registro selecionado?</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Não</button>
                <a class="btn btn-primary" asp-controller="@Model.Controller" asp-action="Delete" asp-route-id="@Model.Id">Sim</a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
