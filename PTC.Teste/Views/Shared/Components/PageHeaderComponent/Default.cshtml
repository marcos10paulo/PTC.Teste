@model PTC.Teste.Models.PageHeaderViewModel

@{
    ViewData["Title"] = Model.Title;
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@Model.Title</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    @foreach (var item in Model.Routes)
                    {
                        if (item.Value == string.Empty)
                        {
                            <li class="breadcrumb-item active">@item.Key</li>
                        }
                        else
                        {
                            <li class="breadcrumb-item"><a href="@item.Value">@item.Key</a></li>
                        }
                    }
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->