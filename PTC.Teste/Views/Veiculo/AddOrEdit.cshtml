@model PTC.Teste.Models.Veiculo.VeiculoViewModel

<html>
<head>
    @if (Model.Id == 0)
    {
        @await Component.InvokeAsync("PageHeaderComponent", new { Title = "Incluir Veículo", Routes = new Dictionary<string, string>() { { "Cadastro", "" }, { "Veículo", "" }, { "Incluir", "" } } })
    }
    else
    {
        @await Component.InvokeAsync("PageHeaderComponent", new { Title = "Alterar Veículo", Routes = new Dictionary<string, string>() { { "Cadastro", "" }, { "Veículo", "" }, { "Alterar", "" } } })
    }
</head>
<body>
    <form asp-controller="Veiculo" asp-action="AddOrEdit" method="post">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title"></h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">

                <div class="row">
                    <div class="form-group col-md-12" hidden>
                        <label asp-for="Id"></label>
                        <input type="number" class="form-control" id="Id" asp-for="Id" readonly>
                    </div>

                    <div class="form-group col-md-12">
                        <label asp-for="ProprietarioId"></label>
                        <select class="form-control select2" data-placeholder="Selecione o proprietário" style="width: 100%;" asp-for="ProprietarioId" asp-items="@(new SelectList(Model.Proprietarios, "Id", "Nome"))">
                            <option selected="selected"></option>
                        </select>
                        <span asp-validation-for="ProprietarioId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Renavam"></label>
                        <input type="text" class="form-control" asp-for="Renavam" maxlength="20">
                        <span asp-validation-for="Renavam" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group col-md-6">
                        <label asp-for="MarcaId"></label>
                        <select class="form-control select2" data-placeholder="Selecione a marca" style="width: 100%;" asp-for="MarcaId" asp-items="@(new SelectList(Model.Marcas, "Id", "Nome"))">
                            <option selected="selected"></option>
                        </select>
                        <span asp-validation-for="MarcaId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Modelo"></label>
                        <input type="text" class="form-control" asp-for="Modelo" maxlength="50">
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="AnoFabricacao"></label>
                        <input type="text" class="form-control interger" asp-for="AnoFabricacao">
                        <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="AnoModelo"></label>
                        <input type="text" class="form-control interger" asp-for="AnoModelo">
                        <span asp-validation-for="AnoModelo" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Quilometragem"></label>
                        <input type="text" class="form-control interger" asp-for="Quilometragem">
                        <span asp-validation-for="Quilometragem" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Valor"></label>
                        <input type="text" class="form-control decimal" asp-for="Valor">
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <div class="form=group col-md-6">
                        <label asp-for="SituacaoVeiculo"></label>
                        <select class="form-control select2" asp-for="SituacaoVeiculo" asp-items="Html.GetEnumSelectList<PTC.Teste.Entity.Enum.SituacaoVeiculo>()">
                            <option value="" selected="selected"></option>
                        </select>
                        <span asp-validation-for="SituacaoVeiculo" class="text-danger"></span>
                    </div>

                </div>
                @await Component.InvokeAsync("DefaultAddOrEditComponent", new { Controller = "Veiculo", Id = Model.Id })
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </form>
    <script src="~/plugins/jquery/jquery.js"></script>
    <script src="~/plugins/jquery-mask/jquery.mask.min.js"></script>
    <script>
        $(function () {
            $(".select2").select2();
            $('.decimal').mask("#.##0,00", { reverse: true });
            $('.integer').mask("##0", { reverse: true });
        });

    </script>
</body>
</html>
